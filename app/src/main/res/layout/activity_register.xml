<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="comp3350.MovieGoers.presentation.RegisterActivity">

    <TextView
        android:id="@+id/register_titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="REGISTER"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/register_usernameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/register_titleView"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="24dp"
        android:text="Username"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/register_fNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_usernameBox"
        android:layout_alignStart="@+id/register_usernameBox"
        android:layout_below="@+id/register_usernameBox"
        android:layout_marginTop="21dp"
        android:text="First Name"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/register_lNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_fNameBox"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_toEndOf="@+id/register_fNameBox"
        android:layout_toRightOf="@+id/register_fNameBox"
        android:text="Last Name"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/register_passwordView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_fNameBox"
        android:layout_alignStart="@+id/register_fNameBox"
        android:layout_below="@+id/register_fNameBox"
        android:layout_marginTop="27dp"
        android:text="Password"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/register_cPasswordView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_cPasswordBox"
        android:layout_alignLeft="@+id/register_cPasswordBox"
        android:layout_alignStart="@+id/register_cPasswordBox"
        android:text="Confirm Password"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/register_usernameBox"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_usernameView"
        android:layout_alignStart="@+id/register_usernameView"
        android:layout_below="@+id/register_usernameView"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/register_fNameBox"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_fNameView"
        android:layout_alignStart="@+id/register_fNameView"
        android:layout_below="@+id/register_fNameView"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/register_lNameBox"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_lNameView"
        android:layout_alignStart="@+id/register_lNameView"
        android:layout_below="@+id/register_lNameView"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/register_passwordBox"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register_passwordView"
        android:layout_alignStart="@+id/register_passwordView"
        android:layout_below="@+id/register_passwordView"
        android:ems="10"
        android:hint="Password"
        android:inputType="textWebPassword"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/register_cPasswordBox"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/register_passwordBox"
        android:layout_alignBottom="@+id/register_passwordBox"
        android:layout_alignLeft="@+id/register_lNameBox"
        android:layout_alignStart="@+id/register_lNameBox"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textWebPassword"
        android:textSize="24sp" />

    <Button
        android:id="@+id/register_submitButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:onClick="submitButton"
        android:text="SUBMIT"
        android:textSize="24sp" />

    <Button
        android:id="@+id/register_backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="backButton"
        android:text="Back" />

</RelativeLayout>
